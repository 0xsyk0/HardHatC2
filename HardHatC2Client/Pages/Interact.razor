                                                                            <MudIcon Icon=@setIcon(currenttask) Color=@SetColor(currenttask) class="mr-3"></MudIcon>
                                                                            <MudText>@commandHeaderText</MudText>
                                                                        </div>
                                                                    }

                                                                </TitleContent>
