                                                                            }

                                                                        </MudCardContent>
                                                                    </MudCard>
                                                                </ChildContent>
                                                            </MudExpansionPanel><!--This is the end of per input and output card -->   
                                                    </MudExpansionPanels>
                                                }
                                            }
                                        </MudCardContent>
