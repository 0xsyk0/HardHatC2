                                                                                        {
                                                                                            var result = ((TaskOutputDic[currenttask].Result as string).Split(new string[] { "\r\n", "\r", "\n" }, StringSplitOptions.None)).ToList();
                                                                                            <HardHatC2Client.Components.PrintEnvTable Outputs="@result"/>
                                                                                        }
